@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrarse";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Crear una cuenta nueva.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.PrimerNombre" class="form-control" autocomplete="primer-nombre" aria-required="true" />
                <label asp-for="Input.PrimerNombre"></label>
                <span asp-validation-for="Input.PrimerNombre" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.SegundoNombre" class="form-control" autocomplete="segundo-nombre" aria-required="true" />
                <label asp-for="Input.SegundoNombre"></label>
                <span asp-validation-for="Input.SegundoNombre" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.PrimerApellido" class="form-control" autocomplete="primer-apellido" aria-required="true" />
                <label asp-for="Input.PrimerApellido"></label>
                <span asp-validation-for="Input.PrimerApellido" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.SegundoApellido" class="form-control" autocomplete="segundo-apellido" aria-required="true" />
                <label asp-for="Input.SegundoApellido"></label>
                <span asp-validation-for="Input.SegundoApellido" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.DNI" class="form-control" autocomplete="dni" aria-required="true" />
                <label asp-for="Input.DNI"></label>
                <span asp-validation-for="Input.DNI" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.RTN" class="form-control" autocomplete="rtn" aria-required="true" />
                <label asp-for="Input.RTN"></label>
                <span asp-validation-for="Input.RTN" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registrarse</button>
        </form>
    </div>    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
