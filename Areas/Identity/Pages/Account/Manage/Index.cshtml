@page
@model IndexModel
@{
    ViewData["Title"] = "Perfil de Usuario";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-10">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input asp-for="Username" class="form-control" disabled />
                        <label asp-for="Username" class="form-label"></label>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.PrimerNombre" class="form-control" />
                        <label asp-for="Input.PrimerNombre" class="form-label"></label>
                        <span asp-validation-for="Input.PrimerNombre" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.SegundoNombre" class="form-control" />
                        <label asp-for="Input.SegundoNombre" class="form-label"></label>
                        <span asp-validation-for="Input.SegundoNombre" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.PrimerApellido" class="form-control" />
                        <label asp-for="Input.PrimerApellido" class="form-label"></label>
                        <span asp-validation-for="Input.PrimerApellido" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.SegundoApellido" class="form-control" />
                        <label asp-for="Input.SegundoApellido" class="form-label"></label>
                        <span asp-validation-for="Input.SegundoApellido" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.DNI" class="form-control" />
                        <label asp-for="Input.DNI" class="form-label"></label>
                        <span asp-validation-for="Input.DNI" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.RTN" class="form-control" />
                        <label asp-for="Input.RTN" class="form-label"></label>
                        <span asp-validation-for="Input.RTN" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.PhoneNumber" class="form-control" />
                        <label asp-for="Input.PhoneNumber" class="form-label"></label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <textarea asp-for="Input.Direccion" class="form-control"></textarea>
                        <label asp-for="Input.Direccion" class="form-label"></label>
                        <span asp-validation-for="Input.Direccion" class="text-danger"></span>
                    </div>
                    <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Guardar</button>
                </div>
                <div class="col-md-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.FotoPerfil" style="width: 100%;"></label>
                        @if (Model.Input.FotoPerfil != null)
                        {
                            <img id="profilePicture" style="width:350px;height:350px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.FotoPerfil))">
                        }
                        else
                        {
                            <img id="profilePicture" style="width:350px;height:350px; object-fit:cover" src="">
                        }
                        <input type="file"
                               accept=".png,.jpg,.jpeg,.gif,.tif"
                               asp-for="Input.FotoPerfil"
                               class="form-control"
                               style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                               onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])" />
                        <span asp-validation-for="Input.FotoPerfil" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
